{% extends "layout.twig" %}
{% block center %}
    <div class="container">
        <div class="page-header text-center">
            <h1>{{ 'Change Password'|T }}</h1>
        </div>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form class="form-horizontal" role="form" id="form_pwd" action="/auth/password" method="post">
                    <div class="form-group">
                        <label class="control-label col-md-3">{{ 'Old Password'|T }}</label>
                        <div class="col-md-9">
                            <input class="form-control" type="password" name="old" placeholder="{{ 'Old Password'|T }}" tabindex="1">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">{{ 'New Password'|T }}</label>
                        <div class="col-md-9">
                            <input class="form-control" type="password" name="new1" placeholder="{{ 'New Password'|T }}" tabindex="2" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">{{ 'Retype Password'|T }}</label>
                        <div class="col-md-9">
                            <input class="form-control" type="password" name="new2" placeholder="{{ 'Retype Password'|T }}" tabindex="2" required>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-primary" type="submit" id="submit" tabindex="3">{{ 'Submit'|T }}</button>
                        <button class="btn btn-default" type="reset" id="reset" tabindex="4">{{ 'Reset'|T }}</button>
                    </div>
                    {% if msg is defined %}
                        {{ component('alert', {'level': msg.type, 'data': {"message": msg.message|T}}) }}
                    {% endif %}
                    <div class="text-center" id="sec"></div>
                </form>
            </div>
        </div>
    </div>
    <script>
        function init_center() {
            {% if msg is defined and msg.type == 'success' %}
            $('#sec').redirectAfter('/', 3);
            {% endif %}
        }
    </script>
{% endblock %}