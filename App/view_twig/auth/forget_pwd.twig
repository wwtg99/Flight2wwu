{% extends "layout.twig" %}
{% block center %}
    <div class="container">
        <div class="page-header text-center">
            <h1>{{ title|T }}</h1>
        </div>
        {% if email is defined %}
            {% if send == 0 %}
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 text-center">
                        <h4>{{ 'the user name and email is not exists'|T }} {{ 'please check your input'|T }}</h4>
                        <a href="{{ getConfig('defined_routes.forget_password')|U }}" class="btn btn-default">{{ 'Return'|T }}</a>
                    </div>
                </div>
            {% else %}
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 text-center">
                        <h4>{{ 'An email was sent to'|T }} {{ email }}, {{ 'please check your email'|T }}</h4>
                        <a href="{{ getConfig('base_url') }}" class="btn btn-default">{{ 'Return'|T }}</a>
                    </div>
                </div>
            {% endif %}
        {% else %}
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <form class="form-horizontal" role="form" id="form_pwd" method="post">
                        <div class="form-group">
                            <label class="control-label col-md-4">{{ 'username'|T }}</label>
                            <div class="col-md-8">
                                <input class="form-control" type="text" name="username" placeholder="{{ 'username'|T }}" tabindex="1" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4">{{ 'email'|T }}</label>
                            <div class="col-md-8">
                                <input class="form-control" type="email" name="email" placeholder="{{ 'email'|T }}" tabindex="2" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4">{{ 'Captcha'|T }}</label>
                            <div class="col-md-4">
                                <input class="form-control" type="text" name="captcha" placeholder="{{ 'Captcha'|T }}" tabindex="3" required>
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-link" type="button" id="bt_refcap"><img src="{{ captcha.inline() }}"> <span class="glyphicon glyphicon-refresh"></span></button>
                            </div>
                        </div>
                        <input type="hidden" name="state" value="{{ state }}">
                        <div class="form-group text-center">
                            <button class="btn btn-primary" type="submit" id="submit" tabindex="4">{{ 'Submit'|T }}</button>
                            <button class="btn btn-default" type="reset" id="reset" tabindex="5">{{ 'Reset'|T }}</button>
                        </div>
                        {% set msg = old('msg') %}
                        {% if msg %}
                            <div class="alert alert-danger text-center">
                                {{ msg.message|T }}
                            </div>
                        {% endif %}
                    </form>
                </div>
            </div>
        {% endif %}
    </div>
    <script>
        function init_center() {
            $('#bt_refcap').click(function() {
                $.get('{{ getConfig('defined_routes.update_captcha')|U }}', {}, function (data) {
                    $('#bt_refcap img').attr('src', data);
                });
            });
        }
    </script>
{% endblock %}