{% extends "admin/admin_layout.twig" %}
{% block center %}
    <div class="container">
        <div class="page-header text-center">
            <h1>{{ title|T }}</h1>
        </div>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form id="form_edit">
                    <div class="form-group">
                        <label class="control-label">{{ 'app_name'|T }}</label>
                        <input class="form-control" type="text" name="app_name" value="{{ data.app_name }}" required>
                    </div>
                    <div class="form-group">
                        <label class="control-label">{{ 'redirect_uri'|T }}</label>
                        <input class="form-control" type="text" name="redirect_uri" value="{{ data.redirect_uri }}" required>
                    </div>
                    <div class="form-group">
                        <label class="control-label">{{ 'descr'|T }}</label>
                        <input class="form-control" type="text" name="descr" value="{{ data.descr }}">
                    </div>
                    <button class="btn btn-primary" type="button" id="bt_submit">{{ 'Submit'|T }}</button>
                    <button class="btn btn-default" type="reset">{{ 'Reset'|T }}</button>
                    <a href="{{ route }}" class="btn btn-default" type="button">{{ 'Return'|T }}</a>
                </form>
            </div>
        </div>
    </div>
    <script>
        function init_center() {
            {% if data is defined %}
                $('#bt_submit').click(updateObject);
            {% else %}
                $('#bt_submit').click(createObject);
            {% endif %}
        }

        function createObject() {
            var form = $('#form_edit');
            if (form.valid()) {
                var fd = new FormData(document.getElementById('form_edit'));
                $.ajax({
                    url: '{{ route }}',
                    data: fd,
                    processData: false,
                    contentType: false,
                    type: 'POST',
                    success: function (data) {
                        console.log(data);
                    },
                    error: function (data) {
                        console.log(data);
                    }
                });
            }
        }

        function updateObject() {

        }

    </script>
{% endblock %}